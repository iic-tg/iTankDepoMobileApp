<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/Title"
        android:weightSum="2">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Remark"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:id="@+id/equip_no"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Remark"
                android:layout_marginLeft="2dp"
                android:textColor="@color/tv_color"
                android:id="@+id/tv_remark"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Code"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:textColor="@color/tv_color"
                android:id="@+id/tv_endDate"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/text_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:id="@+id/ed_remark"
                    android:textColor="@color/list_text"
                    android:layout_marginRight="4dp"
                    android:hint=""
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/ic_down"
                    android:visibility="gone"
                    android:id="@+id/im_item"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_sub_item"
                    android:visibility="invisible"
                    android:textColor="@color/list_text"
                    style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:textColor="@color/list_text"
                    android:id="@+id/tv_Status_id"
                    android:layout_marginRight="4dp"
                    android:hint=""
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/ic_down"
                    android:tint="@color/black"
                    android:visibility="gone"
                    android:id="@+id/im_repair_type"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </LinearLayout>

        <View style="@style/View_horizontal_black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Close"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:id="@+id/bt_close"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>