<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"
            android:id="@+id/toolbar"></include>


        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <include layout="@layout/change_status_footer" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/footer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="2dp"
                        android:text="Search Equipments"
                        android:gravity="center|left"
                        />
                    <View style="@style/View_horizontal_heating"
                        android:background="@color/list_text"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/text_layout"
                        android:layout_below="@+id/visit_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_name"
                            android:text="Current Status *"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="Customer "
                            android:textColor="@color/tv_color"
                            android:id="@+id/tv_cust_no"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_below="@+id/text_layout"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="2dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:id="@+id/successmessage"/>
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sp_current_status"
                                android:textColor="@color/list_text"
                                style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
                            <!-- <EditText
                                 android:layout_width="match_parent"
                                 android:id="@+id/ed_customer"
                                 android:layout_height="match_parent"
                                 android:padding="5dp"
                                 android:lines="1"
                                 android:singleLine="true"
                                 android:paddingRight="10dp"
                                 android:layout_marginRight="4dp"
                                 android:hint=""
                                 />
                             <ImageView
                                 android:layout_width="20dp"
                                 android:layout_height="20dp"
                                 android:layout_marginTop="5dp"
                                 android:src="@mipmap/ic_down_dark"
                                 android:layout_alignParentRight="true"/>-->
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="2dp"
                            android:layout_height="match_parent">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/sp_status_customer"
                                android:textColor="@color/list_text"
                                style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/circle_button_gray"
                        android:text="or"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:id="@+id/tv_equip_no"
                        android:text="Equipment Number *"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/im_search"
                            android:id="@+id/ed_equip_no"
                            android:gravity="center|left"
                            android:textColor="@color/list_text"
                            android:layout_toLeftOf="@+id/im_search" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_cancel"
                            android:background="@color/list_text"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:tint="@color/white"
                            android:id="@+id/im_close"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toLeftOf="@+id/im_close"
                            android:id="@+id/im_search"
                            android:layout_marginRight="5dp"
                            android:background="@color/Title"
                            android:src="@mipmap/ic_search"/>


                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/field_border"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Change Status"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.8"
                        android:id="@+id/textView5" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_down"
                            android:id="@+id/equip_down"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_up"
                            android:visibility="gone"
                            android:id="@+id/equip_up"
                            />
                    </RelativeLayout>

                </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/LL_hole"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="2"
                          android:layout_marginLeft="2dp"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:text="To Status *"
                              android:id="@+id/tv_status"
                              android:gravity="center|left"
                              />

                          <TextView
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:text="To Status Date *"
                              android:id="@+id/tv_date"
                              android:gravity="center|left"
                              />


                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="2"
                          android:layout_below="@+id/text_layout"
                          android:orientation="horizontal">


                          <RelativeLayout
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_marginRight="2dp"
                              android:layout_height="wrap_content">
                              <Spinner
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/sp_to_status"
                                  android:textColor="@color/list_text"
                                  android:layout_marginTop="6.5dp"
                                  style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
                              <!-- <EditText
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="5dp"
                                   android:lines="1"
                                   android:singleLine="true"
                                   android:paddingRight="10dp"
                                   android:focusable="false"
                                   android:layout_marginRight="4dp"
                                   android:id="@+id/ed_date"
                                   android:hint=""
                                   android:textColor="@color/list_text"
                                   />
                               <ImageView
                                   android:layout_width="30dp"
                                   android:layout_height="30dp"
                                   android:layout_marginTop="2dp"
                                   android:src="@mipmap/ic_calender"
                                   android:id="@+id/im_date"
                                   android:visibility="gone"
                                   android:layout_alignParentRight="true"/>-->
                          </RelativeLayout>


                          <RelativeLayout
                              android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_marginRight="2dp"
                              android:layout_height="match_parent">
                              <EditText
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:padding="5dp"
                                  android:lines="1"
                                  android:layout_marginTop="7dp"
                                  android:singleLine="true"
                                  android:focusable="false"
                                  android:paddingRight="10dp"
                                  android:layout_marginRight="4dp"
                                  android:hint=""
                                  android:id="@+id/ed_to_statusDate"
                                  android:textColor="@color/list_text"
                                  />
                              <ImageView
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:layout_marginTop="2dp"
                                  android:src="@mipmap/ic_calender"
                                  android:id="@+id/im_date"
                                  android:layout_alignParentRight="true"/>
                          </RelativeLayout>


                      </LinearLayout>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="2"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="2dp"
                      android:layout_below="@+id/visit_line"
                      android:orientation="horizontal">

                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="Remarks "
                          android:textColor="@color/tv_color"
                          />



                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_below="@+id/text_layout"
                      android:layout_marginTop="10dp"
                      android:orientation="vertical">

                      <EditText
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:paddingLeft="10dp"
                          android:layout_marginRight="8dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:id="@+id/ed_remarks"
                          android:textColor="@color/list_text"/>


                  </LinearLayout>

              </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <EditText
                            android:id="@+id/searchView2"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/bottom_field_border_search"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"
                            android:hint="Find"
                            android:textSize="14dp"
                            android:drawableRight="@mipmap/ic_search"
                            android:layout_alignParentTop="true">
                        </EditText>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@mipmap/ic_refresh"/>
                    </LinearLayout>



                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/status_list_view"
                        android:clickable="true">

                    </ListView>


                </LinearLayout>

            </LinearLayout>




        </ScrollView>



    </RelativeLayout>
    <!--  <include
          layout="@layout/pluse_button"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />-->

    <!--<include layout="@layout/navigation"></include>-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
