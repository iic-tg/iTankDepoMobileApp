<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/text_layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Repair type"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_endDate"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_endTime"
                android:text="Invoicing Party"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/text_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_repair_type"
                    android:textColor="@color/list_text"
                    style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>

                <!--  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:lines="1"
                      android:singleLine="true"
                      android:paddingRight="10dp"
                      android:focusable="false"
                      android:id="@+id/ed_endDate"
                      android:textColor="@color/list_text"
                      android:layout_marginRight="4dp"
                      android:hint=""
                      />
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_marginTop="2dp"
                      android:src="@mipmap/ic_time"
                      android:id="@+id/im_endDate"
                      android:visibility="gone"
                      android:layout_alignParentRight="true"/>-->
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_invoicing_party"
                    android:textColor="@color/list_text"
                    style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>

                <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="5dp"-->
                    <!--android:lines="1"-->
                    <!--android:singleLine="true"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:focusable="false"-->
                    <!--android:textColor="@color/list_text"-->
                    <!--android:id="@+id/ed_endTime"-->
                    <!--android:layout_marginRight="4dp"-->
                    <!--android:hint=""-->
                    <!--/>-->
                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_marginTop="2dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:src="@mipmap/ic_time"-->
                    <!--android:id="@+id/im_endTime"-->
                    <!--android:layout_alignParentRight="true"/>-->
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Customer Approval Ref No *"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_Approval_RefNo"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_Approval_Date"
                android:text="Approval Date *"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/text_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:id="@+id/ed_approval_refNo"
                    android:textColor="@color/list_text"
                    android:layout_marginRight="4dp"
                    android:hint=""
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/ic_time"
                    android:visibility="gone"
                    android:id="@+id/im_cleaning_endDate"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:textColor="@color/list_text"
                    android:id="@+id/ed_approval_date"
                    android:layout_marginRight="4dp"
                    android:hint=""
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/ic_calender"
                    android:id="@+id/im_cleaning_endTime"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/list_text"
                android:layout_marginLeft="2dp"
                android:text="End Time *"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Party Approval Ref No"
                android:id="@+id/tv_temp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/ed_temp"
                    android:textColor="@color/list_text"
                    android:layout_weight="2.00" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Remarks"
                android:id="@+id/tv_startDate"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:id="@+id/tv_startTime"
                android:text="Start Time *"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/text_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="2dp"
                android:layout_height="50dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/list_text"
                    android:focusable="false"
                    android:id="@+id/ed_startDate"
                    android:hint=""
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/im_startDate"
                    android:src="@mipmap/ic_calender"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:visibility="gone"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/im_startTime"
                    android:src="@mipmap/ic_time"
                    android:layout_alignParentRight="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:id="@+id/ed_startTime"
                    android:textColor="@color/list_text"
                    android:hint=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>