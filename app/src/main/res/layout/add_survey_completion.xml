<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:openDrawer="start">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_header"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"
            android:id="@+id/toolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/toolbar"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/text1"
                        android:focusable="false"
                        android:gravity="center|left"
                        android:textColor="@color/Title"
                        android:text="text1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center|left"
                        android:id="@+id/text2"
                        android:textColor="@color/Title"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center|left"
                        android:id="@+id/text3"
                        android:textColor="@color/Title"
                        android:text=""/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/ic_info_leaktest"
                        android:focusable="false"
                        android:textColor="@color/Title"
                        android:id="@+id/more_info"
                        android:text=""/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentTop="true">
            <include layout="@layout/repair_header_survey_complition" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/heating_footer" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight=".3"
        android:id="@+id/next"
        android:layout_above="@+id/footer"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/skip"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:layout_gravity="center|left"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:visibility="invisible"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:tint="@color/white"
                    android:id="@+id/line_item_id"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/line_items"
                    android:layout_weight="1"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/tab_background"
                android:layout_weight="1.2">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/skip"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:layout_gravity="center|left"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:visibility="invisible"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/im_skip"
                    android:layout_marginLeft="7dp"
                    android:tint="@color/white"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/repair_summary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_totalCost"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next"
        android:layout_below="@+id/LL_header"
        android:layout_marginTop="5dp"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/text_layout"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LL_add_completion_details"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Estimate ManHour"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:id="@+id/tv_Estimation_date"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Actual ManHour"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:id="@+id/tv_endDate"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">
                        <!--  <Spinner
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/sp_repair_type"
                              android:textColor="@color/list_text"
                              style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
      -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:id="@+id/ed_MH_date"
                            android:textColor="@color/list_text"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_calender"
                            android:id="@+id/im_MH_date"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <!--   <Spinner
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/sp_repair_type"
                               android:textColor="@color/list_text"
                               style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
       -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:textColor="@color/list_text"
                            android:id="@+id/ed_actual_MH_time"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_time"
                            android:id="@+id/im_actual_MH_time"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/visit_line"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/tv_color"
                        android:text="Complition Date"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/tv_color"
                        android:text="Complition Time"
                        />






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <!--    <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/sp_last_testDate"
                                android:textColor="@color/list_text"
                                style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>-->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:id="@+id/ed_completion_date"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            android:textColor="@color/list_text"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_calender"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:id="@+id/ed_completion_time"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            android:textColor="@color/list_text"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_time"
                            android:id="@+id/im_completion_time"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>





                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/list_text"
                        android:layout_marginLeft="2dp"
                        android:text="End Time *"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Your Location"
                        android:id="@+id/tv_temp"

                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/ed_temp"
                            android:textColor="@color/list_text"
                            android:layout_weight="2.00" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Remarks"
                        android:textColor="@color/tv_color"
                        android:id="@+id/tv_startDate"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:visibility="gone"
                        android:id="@+id/tv_startTime"
                        android:text="Start Time *"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="2dp"
                        android:layout_height="50dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/list_text"
                            android:focusable="false"
                            android:id="@+id/ed_startDate"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/im_startDate"
                            android:src="@mipmap/ic_calender"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:visibility="gone"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/im_startTime"
                            android:src="@mipmap/ic_time"
                            android:layout_alignParentRight="true"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:id="@+id/ed_startTime"
                            android:textColor="@color/list_text"
                            android:hint=""
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LL_survey_completion"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Survey Name"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:id="@+id/tv_survey_name"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Survey Completion date"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:id="@+id/tv_sur_completion_date"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">
                        <!--  <Spinner
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/sp_repair_type"
                              android:textColor="@color/list_text"
                              style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
      -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:id="@+id/ed_survey_name"
                            android:textColor="@color/list_text"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_calender"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <!--   <Spinner
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/sp_repair_type"
                               android:textColor="@color/list_text"
                               style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>
       -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:textColor="@color/list_text"
                            android:id="@+id/ed_survey_completion_date"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_calender"
                            android:id="@+id/im_survey_completion_date"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Invoice Party"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/tv_color"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Repair type"
                        android:layout_marginLeft="2dp"
                        android:visibility="gone"
                        android:textColor="@color/tv_color"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp_invoicing_party"
                            android:visibility="invisible"
                            android:textColor="@color/list_text"
                            style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:textColor="@color/list_text"
                            android:id="@+id/ed_invoicing_party"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_down"
                            android:tint="@color/black"
                            android:id="@+id/im_invoicing_party"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp_repair_type"
                            android:visibility="invisible"
                            android:textColor="@color/list_text"
                            style="@style/Widget.AppCompat.Spinner.Underlined"></Spinner>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:focusable="false"
                            android:textColor="@color/list_text"
                            android:id="@+id/ed_repair_type"
                            android:layout_marginRight="4dp"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_down"
                            android:tint="@color/black"
                            android:id="@+id/im_repair_type"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Remarks"
                        android:textColor="@color/tv_color"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:visibility="gone"
                        android:text="Start Time *"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@+id/text_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="2dp"
                        android:layout_height="50dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:paddingRight="10dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/list_text"
                            android:id="@+id/ed_survey_remark"
                            android:hint=""
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/ic_calender"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>




    </ScrollView>




</RelativeLayout>
