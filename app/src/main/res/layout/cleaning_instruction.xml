<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar"
            android:id="@+id/toolbar"></include>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <include layout="@layout/heating_footer" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/toolbar">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@color/toolbar"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/text1"
                                android:focusable="false"
                                android:textColor="@color/Title"
                                android:text="text1"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:focusable="false"
                                android:layout_gravity="center|left"
                                android:id="@+id/text2"
                                android:textColor="@color/Title"
                                android:text="AAAAFFGG1 , type"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="66dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:padding="17dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:src="@mipmap/ic_cleaning"
                                android:focusable="false"
                                android:textColor="@color/Title"
                                android:id="@+id/text4"
                                android:text="08:15 am"/>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/text_layout"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Start Date *"
                                android:id="@+id/tv_startDate"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:visibility="gone"
                                android:id="@+id/tv_startTime"
                                android:text="Start Time *"/>
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_below="@+id/text_layout"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:layout_height="match_parent">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:layout_marginRight="4dp"
                                    android:textColor="@color/list_text"
                                    android:focusable="false"
                                    android:id="@+id/ed_startDate"
                                    android:hint=""
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:id="@+id/im_startDate"
                                    android:src="@mipmap/ic_calender"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:visibility="gone"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:id="@+id/im_startTime"
                                    android:src="@mipmap/ic_time"
                                    android:layout_alignParentRight="true"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:focusable="false"
                                    android:id="@+id/ed_startTime"
                                    android:textColor="@color/list_text"
                                    android:hint=""
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Streaming Start Time *"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/tv_endDate"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/tv_endTime"
                                android:text="Streaming End Time *"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_below="@+id/text_layout"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:layout_height="match_parent">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:focusable="false"
                                    android:id="@+id/ed_endDate"
                                    android:textColor="@color/list_text"
                                    android:layout_marginRight="4dp"
                                    android:hint=""
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@mipmap/ic_time"
                                    android:id="@+id/im_endDate"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:layout_height="match_parent">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:focusable="false"
                                    android:textColor="@color/list_text"
                                    android:id="@+id/ed_endTime"
                                    android:layout_marginRight="4dp"
                                    android:hint=""
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@mipmap/ic_time"
                                    android:id="@+id/im_endTime"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Cleaning start Time *"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/tv_cleaning_startDate"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/tv_cleaning_endTime"
                                android:text="Cleaning End Time *"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_below="@+id/text_layout"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:layout_height="match_parent">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:focusable="false"
                                    android:id="@+id/ed_cleaning_start_time"
                                    android:textColor="@color/list_text"
                                    android:layout_marginRight="4dp"
                                    android:hint=""
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@mipmap/ic_time"
                                    android:id="@+id/im_cleaning_endDate"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:layout_height="match_parent">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:paddingRight="10dp"
                                    android:focusable="false"
                                    android:textColor="@color/list_text"
                                    android:id="@+id/ed_cleaning_endTime"
                                    android:layout_marginRight="4dp"
                                    android:hint=""
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@mipmap/ic_time"
                                    android:id="@+id/im_cleaning_endTime"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:textColor="@color/list_text"
                                android:layout_marginLeft="2dp"
                                android:text="End Time *"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Temp *"
                                android:id="@+id/tv_temp"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:weightSum="1">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:id="@+id/ed_temp"
                                    android:textColor="@color/list_text"
                                    android:layout_weight="2.00" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

</ScrollView>


    </RelativeLayout>
    <!--  <include
          layout="@layout/pluse_button"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />-->

    <!--<include layout="@layout/navigation"></include>-->

</android.support.v4.widget.DrawerLayout>
