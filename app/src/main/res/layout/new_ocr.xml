                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/ok"
                    android:text="Ok"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/white"
                    android:background="@color/submit"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
